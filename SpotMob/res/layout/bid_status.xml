<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="#ececec"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_margin="10dip"
        android:background="#ffffff"
		android:padding="15dip"
        >

        <TextView
            android:id="@+id/spotDescriptionLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spot Description"
            android:textAppearance="?android:attr/textAppearanceSmall" 
         android:textColor="#00baff"
                android:textStyle="bold"              />

        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/bidStatusLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bid Status"
            android:textAppearance="?android:attr/textAppearanceSmall" 
         android:textColor="#00baff"
                android:textStyle="bold"              />

        <TextView
            android:id="@+id/bidStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/phoneNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:autoLink="phone"
            android:phoneNumber="true"
            />

        <TextView
            android:id="@+id/sellerRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller Rating"
            android:textAppearance="?android:attr/textAppearanceSmall" 
         android:textColor="#00baff"
                android:textStyle="bold"          />

        <RatingBar
            android:id="@+id/customUserRating"
            style="@style/userRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:clickable="false"
            android:isIndicator="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:id="@+id/hiddenLayout"
        >
    </LinearLayout>

</LinearLayout>