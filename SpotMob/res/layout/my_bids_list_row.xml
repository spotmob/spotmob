<?xml version="1.0" encoding="utf-8"?>
<!-- ListRow Left sied Thumbnail image -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_margin="10dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/toptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="10dip"
            android:layout_weight="0.75"
            android:textColor="#040404"
            android:textSize="14dip" />

        <TextView android:id="@+id/bidsText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dip" android:textColor="#00baff" android:textSize="18dip" android:textStyle="bold" /><TextView
            android:id="@+id/bottomtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee" 
            android:layout_margin="10dip"
            />

 <!--        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
